@namespace EasyCsv.Components
@inherits StrategyBucketItemBase

@if (CsvProcessor?.CurrentState != null)
{
    <MudSelect Immediate="Immediate" Disabled="Disabled" Label="@Label" T="int?" @bind-Value="ReferenceId">
        @foreach (var (referenceCsv, index) in CsvProcessor.ReferenceCsvs.Select((x, i) => (x, i)))
        {
            <MudSelectItem T="int" Value="index">@referenceCsv.FileName</MudSelectItem>
        }
    </MudSelect>
}

@code {
    [Parameter] public EventCallback<int?> ReferenceIdChanged { get; set; }
    private int? _referenceId;
    [Parameter] public int? ReferenceId
    {
        get => _referenceId;
        set
        {
            if (value == _referenceId) return;
            _referenceId = value;
            ReferenceIdChanged.InvokeAsync(value);
        }
    }
    [Parameter] public bool Immediate { get; set; } = true;
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public string Label { get; set; } = "Reference Csv";

}